#include "lexique.h"
#include "symboles.h"
char yytext[100];
FILE *yyin;
int main(int argc, char **argv) {
	int uniteCourante;
	yyin = fopen(argv[1], "r");
	if(yyin == NULL){
		fprintf(stderr, "impossible dâ€™ouvrir le fichier %s\n", argv[1]);
		exit(1);
	}
	uniteCourante = yylex();
	while (uniteCourante != FIN) {
		printf("%s, %d\n", yytext, uniteCourante);
		uniteCourante = yylex();
	}
return 0;
}
